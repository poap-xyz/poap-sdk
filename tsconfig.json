{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,
    "baseUrl": "./packages",
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "declarationDir": ".",
    "outDir": "./dist",
    "target": "es2018",
    "lib": ["es2018", "dom", "esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "paths": {
      "@poap-xyz/poap-sdk/drops": ["./poap-sdk/src/drops"],
      "@poap-xyz/poap-sdk/moments": ["./poap-sdk/src/moments"],
      "@poap-xyz/poap-sdk/poaps": ["./poap-sdk/src/poaps"],
      "@poap-xyz/poap-sdk/providers": ["./poap-sdk/src/providers"],
      "@poap-xyz/poap-sdk/utils": ["./poap-sdk/src/utils"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/poap-sdk" },
    { "path": "./packages/frames" }
  ]
}
